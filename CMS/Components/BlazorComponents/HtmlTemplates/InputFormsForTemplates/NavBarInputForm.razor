        <div>
            <!--Color Controls -->
            <label>Background Color:</label>
            <input type="color" @bind="BackgroundColor" />
            <br>
            <label>Text Color:</label>
            <input type="color" @bind="TextColor" />
        </div>

        @if (infoMessage)
