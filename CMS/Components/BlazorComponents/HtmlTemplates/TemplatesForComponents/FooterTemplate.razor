@namespace BlazorComponents.HtmlTemplates.TemplatesForComponents
@using CMS.Components.BlazorComponents.HtmlTemplates
@using CMS.Shared
@inherits BaseFooterTemplate //gets the base parameters we have in every template/inputform

@* <h3>Template 1</h3> *@

<footer class="text-white py-4 footer-template" style="background-color:@BackgroundColor;">
    <div class="container">
        <h1 class="footer-heading1" style="color:@TextColor;">@TextInput1</h1>

        <div class="text-right" style="color:@TextColor;">
            @if (!string.IsNullOrEmpty(TextInput2))
            {
                var delimiter = ";;";
                //Split input at delimiter
                var partDetails = InputProcessor.SplitInput(TextInput2, delimiter);

                foreach (var part in partDetails)
                {

                    if (part.IsLink)
                    {
                        //Render Link
                        <small class="d-block footer-template-link">
                            <a href="@part.Url" class="footer-link">@part.DisplayText</a>
                        </small>
                    }
                    else
                    {
                        //Render Text
                        <small class="d-block footer-template-small">@part.DisplayText</small>
                    }
                }
            }

        </div>
    </div>
</footer>