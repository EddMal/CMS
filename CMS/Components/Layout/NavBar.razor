@implements IDisposable

@inject NavigationManager NavigationManager
<nav class="navbar navbar-expand-lg bg-dark fixed-top scrolling-navbar" id="navbar">

    <a class="navbar-brand" id="logo" href="#top-page">
        <span class="material-symbols-outlined">
            emoji_language
        </span>
        CMS
    </a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="material-symbols-outlined">
            menu
        </span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav text-center ml-auto">
            <AuthorizeView>
                <NotAuthorized>
                    <li class="nav-item" data-toggle="collapse" data-target=".navbar-collapse.show">
                        <a class="nav-link" href="#about-section-wrapper" Match="NavLinkMatch.All">
                            <span class="material-symbols-outlined">
                                question_mark
                            </span>
                            HUR FUNGERAR DET
                        </a>
                    </li>
                    <li class="nav-item" data-toggle="collapse" data-target=".navbar-collapse.show">
                        <a class="nav-link" href="#aboutUs" Match="NavLinkMatch.All">
                            <span class="material-symbols-outlined">
                                diversity_1
                            </span>
                            Om oss
                        </a>
                    </li>
                    <li class="nav-item" data-toggle="collapse" data-target=".navbar-collapse.show">
                        <a class="nav-link" href="#payment" Match="NavLinkMatch.All">
                            <span class="material-symbols-outlined">
                                payments
                            </span>
                            PRISMODELL
                        </a>
                    </li>                    
                    <li class="nav-item" data-toggle="collapse" data-target=".navbar-collapse.show">
                        <a class="nav-link" href="#contact-section" Match="NavLinkMatch.All">
                            <span class="material-symbols-outlined">
                                mail
                            </span>
                            KONTAKTA OSS
                        </a>
                    </li>                    
                </NotAuthorized>
            <Authorized>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="websites">
                            Sparade Webbsidor
                        </NavLink>
                    </li>              
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Inställningar
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="font-size: 20px;">
                            <a class="dropdown-item" href="Account/Manage">Profil</a>
                            <a class="dropdown-item" href="Account/Manage/Email">E-post</a>
                            <a class="dropdown-item" href="Account/Manage/ChangePassword">Lösenord</a>
                            <a class="dropdown-item" href="Account/Manage/TwoFactorAuthentication">Två stegs verifering</a>
                            <a class="dropdown-item" href="auth">Authentisering</a>
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>
                </Authorized>
            </AuthorizeView>
        </ul>

        <ul class="navbar-nav">
            <AuthorizeView>
                <NotAuthorized>
                    <li class="nav-item">
                        <NavLink class="btn btn-outline-success my-2 my-sm-0" style="font-size:20px; margin-right:10px;" href="Account/Login">
                            <span class="material-symbols-outlined">
                                login
                            </span>
                            Logga In
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="btn btn-outline-success my-2 my-sm-0" style="font-size:20px; margin-right:10px;" href="Account/Register">
                            <span class="material-symbols-outlined">
                                how_to_reg
                            </span>
                            Registera dig nu
                        </NavLink>
                    </li>
                </NotAuthorized>
                <Authorized>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="Account/Manage">
                            @context.User.Identity?.Name
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <form action="Account/Logout" method="post" class="form-inline" style="font-size:20px; margin-right:10px;">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit" class="btn btn-outline-danger my-2 my-sm-0" style="font-size:20px; margin-right:10px; margin-left:10px;">
                                Logga ut
                            </button>
                        </form>
                    </li>
                </Authorized>
            </AuthorizeView>
        </ul>
    </div>
</nav>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    
}
