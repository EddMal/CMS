@page "/websites/delete"

@using Microsoft.EntityFrameworkCore
@using CMS.Entities
@inject IDbContextFactory<CMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager


<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>WebSite</h4>
    <hr />
    @if (website is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@website.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@website.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreationDate</dt>
            <dd class="col-sm-10">@website.CreationDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastUpdated</dt>
            <dd class="col-sm-10">@website.LastUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@website.UserId</dd>
        </dl>
        <EditForm method="post" Model="website" OnValidSubmit="DeleteWebSite" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(website is null)">Delete</button> |
            <a href="/websites">Back to List</a>
        </EditForm>
    }
</div>

@code {
    WebSite? website;

    [SupplyParameterFromQuery]
    public int WebSiteId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        website = await context.WebSite.FirstOrDefaultAsync(m => m.WebSiteId == WebSiteId);

        if (website is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeleteWebSite()
    {
        using var context = DbFactory.CreateDbContext();
        context.WebSite.Remove(website!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/websites");
    }
}
