                                if (menuItemsWrapper != null)
                                {


                                    
                                    templateParameters[menuItemsWrapper.Name] = menuItemsWrapper.ToDictionary();

                                }
                            }
                            else
                            {
                                // Convert JsonElement to the appropriate type
                                templateParameters[input.Key] = ConvertJsonElement(input.Value);
